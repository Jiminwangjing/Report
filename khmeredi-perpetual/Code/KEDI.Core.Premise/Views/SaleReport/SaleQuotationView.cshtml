@{
    ViewData["Title"] = "SaleQuotationView";    
}

<head>
    <link href="~/Admin/DevReport/css/DevReport.css" rel="stylesheet" />
</head>
<body class="dx-viewport">
    <div class="card card-body">
            <div class="row">
                <div class="col-md-2">
                    <label class="lable_datefrom">@Localizer["Date From"]</label>
                    <input type="date" class="input_datefrom" id="datefrom" />
                </div>
                <div class="col-md-2">
                    <label class="lable_dateto">@Localizer["Date To"]</label>
                    <input type="date" class="input_dateto" id="dateto" />
                </div>
                <div class="col-md-2">
                    <label class="lable_branch">@Localizer["By Branch"]</label>
                    <select type="text" class="input_branch" id="bybranch">
                        <option value="0"></option>
                    </select>
                </div>

                <div class="col-md-2">
                    <label class="lable_user">@Localizer["User Name"] </label>
                    <select type="text" class="input_user" id="byuser">
                        <option value="0"></option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="lable_user">@Localizer["By Customer"]</label>
                    <select type="text" class="input_user" id="bycus">
                        <option value="0"></option>
                    </select>
                </div>
                <div class="col-md-2">
                    <button class="btn btn-xs btn-kernel" id="filter">@Localizer["Filter"]</button>
                </div>
            </div>
        <div id="gridContainer"></div>
        <div class="options">
            <div class="option">
                <div id="autoExpand"></div>
            </div>
        </div>
    </div>
</body>

<script>
    $(function () {
        filterData();
        //Get branch
        $.ajax({
            url: "/SaleReport/GetBranch",
            type: "Get",
            dataType: "Json",
            success: function (respones) {
                var data = '';
                $.each(respones, function (i, item) {
                    data +=
                        '<option value="' + item.ID + '">' + item.Name + '</option>';
                });
                $("#bybranch").append(data);
            }
        });
        $("#bybranch").on('change', function () {
            var branchid = $(this).val();
            // Get Employee
            $.ajax({
                url: "/SaleReport/GetEmployee",
                type: "Get",
                dataType: "Json",
                data: { BranchID: branchid },
                success: function (respones) {
                    var data = '';
                    $("#byuser option:not(:first-child)").remove();
                    $.each(respones, function (i, item) {
                        data +=
                            '<option value="' + item.ID + '">' + item.Employee.Name + '</option>';
                    });
                    $("#byuser").append(data);
                }
            });
        });
        //Get Customer
        $.ajax({
            url: "/SaleReport/GetCustomer",
            type: "Get",
            dataType: "Json",
            success: function (respones) {
                var data = '';
                $.each(respones, function (i, item) {
                    data +=
                        '<option value="' + item.ID + '">' + item.Name + '</option>';
                });
                $("#bycus").append(data);
            }
        });

        $('#filter').click(function () {

            filterData(this);
        });
        function filterData(button) {
            let btn_filter = $(button).children("i.fa-search");
            var date_from = $("#datefrom").val();
            var date_to = $("#dateto").val();
            var branch_id = $("#bybranch").val();
            var user_id = $("#byuser").val();
            var cus_id = $("#bycus").val();

            $.ajax({
                url: "/SaleReport/GetSaleQuotation",
                type: 'GET',
                dataType: 'JSON',
                data: {
                    DateFrom: date_from,
                    DateTo: date_to,
                    BranchID: branch_id,
                    UserID: user_id,
                    CusID: cus_id
                  
                },
                beforeSend: function () {
                    btn_filter.addClass("fa-spinner fa-spin");
                },
                success: function (reponse) {
                    bindGrid(reponse);
                    btn_filter.removeClass("fa-spinner fa-spin");
                }
            });
        }
        function bindGrid(reponse) {
            var dataGrid = $("#gridContainer").dxDataGrid({
                dataSource: reponse,
                allowColumnReordering: true,
                showBorders: true,
                allowColumnResizing: true,
                hoverStateEnabled: true,
                allowColumnResizing: true,
                columnResizingMode: "nextColumn",
                columnMinWidth: 50,
                columnAutoWidth: true,
                scrolling: {
                    columnRenderingMode: "virtual"
                },
                grouping: {
                    autoExpandAll: false,
                },
                searchPanel: {
                    visible: true
                },
                filterRow: {
                    visible: false,
                    applyFilter: "auto"
                },
                //editing: {
                //    mode: "row",
                //    allowUpdating: true
                //},
                //onEditingStart: function (e) {
                //    alert('edit')
                //},
                //onRowInserted: function (e) {
                //    e.component.navigateToRow(e.key);
                //},

                paging: {
                    pageSize: 10
                },
                pager: {
                    showPageSizeSelector: true,
                    allowedPageSizes: [5, 10, 20, 50, 100],
                    showInfo: true
                },
                loadPanel: {
                    enabled: true
                },
                groupPanel: {
                    visible: false
                },
                columns: [
                    {
                        dataField: "Qouttation No",
                        groupIndex: 0
                    },
                    {
                        dataField: "ItemCode",
                        width: 320,
                        caption: "Item Code"
                    },
                    {
                        dataField: "ItemName",
                        caption: "Item Name"
                    },
                    {
                        dataField: "Qty",
                        width:100,
                        caption: "Qty"
                    },
                    {
                        dataField: "Uom",
                        width: 100,
                        caption: "Uom"
                    },
                    {
                        dataField: "UnitPrice",
                        width:170,
                        caption: "Unit Price"
                    },
                    {
                        dataField: "DisItem",
                        caption: "Dis Item"
                    },
                    {
                        dataField: "TotalItem",
                        caption: "Total",
                        alignment: "right",
                        width: 170
                    }
                ],
                summary: {
                    groupItems: [
                        {
                            showInColumn: "ItemCode",
                            column: "CusName",
                            summaryType: "max",
                            displayFormat: "{0}"
                        },
                        {
                            showInColumn: "ItemName",
                            column: "PostingDate",
                            summaryType: "max",
                            displayFormat: "{0}",
                            showInGroupFooter: false,
                            alignByColumn: true
                        },
                        {
                            showInColumn: "UnitPrice",
                            column: "VatValue",
                            summaryType: "max",
                            displayFormat: "Vat. Included: {0}",
                            showInGroupFooter: false,
                            alignByColumn: true,
                            alignment: "left"
                        },
                        {
                            showInColumn: "DisItem",
                            column: "PLC",
                            summaryType: "max",
                            displayFormat: "PLC: {0}",
                            showInGroupFooter: false,
                            alignByColumn: true,
                            alignment: "left"
                        },
                        {
                            showInColumn: "UnitPrice",
                            column: "Discount",
                            summaryType: "max",
                            displayFormat: "Dis. Inv: {0}",
                            showInGroupFooter: true,
                            alignByColumn: true,
                            alignment: "left"
                        },
                        {
                            showInColumn: "Total",
                            column: "TotalAmount",
                            summaryType: "max",
                            displayFormat: "Amount: {0}",
                            showInGroupFooter: false,
                            alignByColumn: true,
                            alignment: "left"
                        },
                        {
                            showInColumn: "DisItem",
                            column: "DisItem",
                            summaryType: "sum",
                            displayFormat: "Dis. Item: {0}",
                            showInGroupFooter: true,
                            alignByColumn: true,
                            alignment: "left"
                        },
                        
                        {
                            showInColumn: "Total",
                            column: "Sub_Total",
                            summaryType: "max",
                            displayFormat: "Total: {0}",
                            showInGroupFooter: true,
                            alignByColumn: true
                        },
                    ],
                    totalItems: [
                        {
                            showInColumn: "ItemCode",
                            column: "SumCount",
                            summaryType: "max",
                            displayFormat: "Count : {0} Invoice",
                            alignment: "left"
                        }, 
                        //{
                        //    showInColumn: "DisItem",
                        //    column: "SumSoldAmount",
                        //    summaryType: "max",
                        //    displayFormat: "Sold Amount :",
                        //    alignment: "right"
                        //},
                        {
                            showInColumn: "DisItem",
                            column: "SumDisItem",
                            summaryType: "max",
                            displayFormat: "Discount Item :",
                            alignment: "right"
                        },
                        {
                            showInColumn: "DisItem",
                            column: "SumDisTotal",
                            summaryType: "max",
                            displayFormat: "Discount Total :",
                            alignment: "right"
                        },
                        {
                            showInColumn: "DisItem",
                            column: "SumVat",
                            summaryType: "max",
                            displayFormat: "Vat.Included : ",
                            alignment: "right"
                        },
                        {
                            showInColumn: "DisItem",
                            column: "SumGrandTotal",
                            summaryType: "max",
                            displayFormat: "Grand Total SSC :",
                            alignment: "right"
                        },
                        {
                            showInColumn: "DisItem",
                            column: "SumGrandTotal",
                            summaryType: "max",
                            displayFormat: "Grand Total LC:",
                            alignment: "right"
                        },
                        //Value
                        //{
                        //    showInColumn: "Total",
                        //    column: "SumSoldAmount",
                        //    summaryType: "max",
                        //    displayFormat: "{0}",
                        //    alignment: "right"
                        //},
                        {
                            showInColumn: "Total",
                            column: "SumDisItem",
                            summaryType: "max",
                            displayFormat: "{0}",
                            alignment: "right"
                        },
                        {
                            showInColumn: "Total",
                            column: "SumDisTotal",
                            summaryType: "max",
                            displayFormat: "{0}",
                            alignment: "right"
                        },
                        {
                            showInColumn: "Total",
                            column: "SumVat",
                            summaryType: "max",
                            displayFormat: "{0}",
                            alignment: "right"

                        },
                        {
                            showInColumn: "Total",
                            column: "SumGrandTotalSys",
                            summaryType: "max",
                            displayFormat: "{0}",
                            alignment: "right"
                        },
                        {
                            showInColumn: "Total",
                            column: "SumGrandTotal",
                            summaryType: "max",
                            displayFormat: "{0}",
                            alignment: "right"
                        },
                    ]

                },

                export: {
                    enabled: true
                },
                onExporting: function (e) {
                    var workbook = new ExcelJS.Workbook();
                    var worksheet = workbook.addWorksheet('Sale-Quotation-Report');

                    DevExpress.excelExporter.exportDataGrid({
                        component: e.component,
                        worksheet: worksheet,
                        topLeftCell: { row: 4, column: 1 }
                    }).then(function (dataGridRange) {
                        // header
                        var headerRow = worksheet.getRow(2);
                        headerRow.height = 30;
                        worksheet.mergeCells(2, 1, 2, 8);
                        headerRow.getCell(1).value = 'Sale Quotation';
                        headerRow.getCell(1).font = { name: 'Segoe UI Light', size: 22 };
                        headerRow.getCell(1).alignment = { horizontal: 'center' };

                    }).then(function () {
                        // https://github.com/exceljs/exceljs#writing-xlsx
                        workbook.xlsx.writeBuffer().then(function (buffer) {
                            saveAs(new Blob([buffer], { type: 'application/octet-stream' }), 'Sale-Quotation-Report.xlsx');
                        });
                    });
                    e.cancel = true;
                },
                onToolbarPreparing: function (e) {
                    var dataGrid = e.component;
                    e.toolbarOptions.items.unshift({
                        location: "before",
                        template: function () {
                            return
                        }
                    },
                        {
                            location: "after",
                            widget: "dxButton",
                            options: {
                                icon: "refresh",
                                onClick: function () {
                                    dataGrid.refresh();
                                    filterData();
                                }
                            }
                        },

                    );
                }

            }).dxDataGrid("instance");

            $("#autoExpand").dxCheckBox({
                value: false,
                text: "Expand All Groups",
                onValueChanged: function (data) {
                    dataGrid.option("grouping.autoExpandAll", data.value);
                }
            });
        }

    })
</script>


