@model CKBS.Models.Services.Administrator.AlertManagement.TypeOfAlertM 
@{
    ViewData["Title"] = "CreateTypeAlert";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link href="~/AutoMobile/css/AlertManagement.css" rel="stylesheet" />

<div class="TitleListAlert">@Localizer["Create type of alert"]</div>

<form asp-action="CreateTypeAlert" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="row">
        <div class="col-md-5">
            <input asp-for="ID" value="0" hidden />

            <label asp-for="Name"> Name </label>
            <input asp-for="Name" autocomplete="off" class="form-control form-control-sm" />

            <button type="submit" class="btn btn-sm btn-success mt-5"><i class="fa fa-save mt-1"></i> Save </button>
            <a asp-action="AlertManagement" asp-controller="AlertManagement" class="btn btn-sm btn-danger mt-5"><i class="fa fa-chevron-circle-left mt-1"></i> @Localizer["Back"]</a>
        </div>
        <div class="col-md-7"></div>
    </div>
</form>

