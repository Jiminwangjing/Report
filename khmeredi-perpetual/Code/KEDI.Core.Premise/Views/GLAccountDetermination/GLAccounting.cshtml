                                <thead>
                                    <tr>
                                        <th class="text-center">@Localizer["#"]</th>
                                        <th class="text-center">@Localizer["Type of Account"]</th>
                                        <th class="text-center">@Localizer["Account Code"]</th>
                                        <th class="text-center">@Localizer["Account Name"]</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </li>
            <li class="tab-sheet" active" id="Resource">
                <div class="tab-title">@Localizer["Resources"]</div>
                <div class="tab-content">
                    <div class="row ml-1 mt-1 hide-scroll">
                        <div class="col ml-3 mt-6">
                            <div>
                                <div class="wrap-table myt1">
                                    <table class="allw-gl-r">
                                        <thead>
                                            <tr>
                                                <th class="text-center">@Localizer["#"]</th>
                                                <th class="text-center">@Localizer["Type of Account"]</th>
