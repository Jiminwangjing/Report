                <div class="tab-title">@Localizer["Member Card"]</div>
                <div class="tab-content overflow-hidden">
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>@Localizer["Cash Account"]</label>
                                <input type="text" readonly id="cash-account" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label></label>
                                <p id="cash-account-name"></p>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>@Localizer["Unearned Revenue Account"]</label>
                                <input type="text" readonly id="unearned-revenue" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label></label>
                                <p id="unearned-revenue-name"></p>
                            </div>
                        </div>
                    </div>
                </div>
            </li>
            <li class="tab-sheet">
                <div class="tab-title">@Localizer["Redeem Point"]</div>
                <div class="tab-content overflow-hidden">
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>@Localizer["Expense Account"]</label>
                                <input type="text" readonly id="cash-account" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label></label>
                                <p id="cash-account-name"></p>
                            </div>
                        </div>
                    </div>
                </div>
            </li>
        </ul>
    </div>

    <div class="row">
        <div class="col-md-12">
            <button class="btn btn-kernel btn-xs" id="Update">@Localizer["Update"]</button>
            <a href="/GLAccountDetermination/GLAccounting" class="btn btn-kernel btn-xs">
                @Localizer["Cancel"]
