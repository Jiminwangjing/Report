<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0" />   
    <style>
        body {
            width: 100vw;
            height: 100vh;
            overflow: hidden;
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        .access-container {
            display: -webkit-box;
            display: -ms-flexbox;
            display: flex;
            -webkit-box-align: center;
            -ms-flex-align: center;
            align-items: center;
            -webkit-box-pack: center;
            -ms-flex-pack: center;
            justify-content: center;
            width: 100%;
            height: 100%;
        }

        .access-container fieldset.forbidden-403 {
            position: relative;
            background: #696969;
            color: #F3F6F9;
            font-family: monospace;
            font-size: 1.1em;
            width: 70%;
            border-radius: 4px;
            border: none;
            padding: 15px;
        }

        .access-container fieldset.forbidden-403 .icon-back {
            position: absolute;
            left: 30px;
            top: 5px;
            width: 40px;
            height: 40px;
            cursor: pointer;
        }

        .access-container fieldset.forbidden-403 img {
            width: 100%;
            height: 100%;
        }

        .access-container fieldset.forbidden-403 legend {
            background: #888888;
            color: #FF9655;
            height: 50px;
            line-height: 50px;
            font-size: 1.5em;
            font-weight: bold;
            border-radius: 3px;
            text-transform: uppercase;
            text-align: center;
            width: calc(100% - 25px);
            -webkit-box-shadow: 0px 0px 5px 1px rgba(0,0,0,.15);
            -moz-box-shadow: 0px 0px 5px 1px rgba(0,0,0,.15);
            box-shadow: 0px 0px 5px 1px rgba(0,0,0,.15);
        }
       
        @@media (max-width: 415px){
            .access-container fieldset.forbidden-403 legend {
                font-size: 1em;
            }
        }
    </style>
</head>
<body>
    @{ Layout = null; }
    <div class="access-container">
        <fieldset class="forbidden-403">
            <legend class="title">
                ACCCESS DENIED
                <a class="icon-back" href="/Home/Dashboard"><img src="~/AdminLayout/images/back.png" /></a>
            </legend>
            <img src="~/AdminLayout/images/permission/forbidden.png" />
        </fieldset>
    </div>
</body>
</html>
