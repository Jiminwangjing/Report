
@{
    ViewData["Title"] = "PurchasePaymentTransaction";
}

<head>
    <link href="~/Admin/DevReport/css/DevReport.css" rel="stylesheet" />
</head>
<body class="dx-viewport">
    <div class="card card-body">
        <div class="row">
            <div class="col-md-2">
                <label class="lable_datefrom">@Localizer["Date From"]</label>
                <input type="date" class="input_datefrom" id="datefrom" />
            </div>
            <div class="col-md-2">
                <label class="lable_dateto">@Localizer["Date To"]</label>
                <input type="date" class="input_dateto" id="dateto" />
            </div>
            <div class="col-md-2">
                <label class="lable_dateto">@Localizer["Vendor From"]</label>
                <select type="text" class="input_dateto" id="byvendor">
                    <option value="0"></option>
                </select>
            </div>
            <div class="col-md-2">
                <label class="lable_dateto">@Localizer["Vendor To"]</label>
                <select type="text" class="input_dateto" id="vendorto">
                    <option value="0"></option>
                </select>
            </div>
            <div>
                <label class="lable_dateto"> @Localizer["By Status"]</label>
                <select type="text" class="input_dateto" id="bystatus">
                    <option selected></option>
                    <option value="open"> Open </option>
                    <option value="close"> Close </option>
                </select>
            </div>

            <div class="col-md-2">
                <button class="btn btn-xs btn-kernel" id="filter">@Localizer["Filter"]</button>
            </div>
        </div>
        <div id="gridContainer"></div>
        <div class="options">
            <div class="option">
                <div id="autoExpand"></div>
            </div>
        </div>
    </div>
</body>

<script>
    $(function () {
        filterData();
        //Get branch
        $.ajax({
            url: "/DevReport/GetBranch",
            type: "Get",
            dataType: "Json",
            success: function (respones) {
                var data = '';
                $.each(respones, function (i, item) {
                    data +=
                        '<option value="' + item.ID + '">' + item.Name + '</option>';
                });
                $("#bybranch").append(data);
            }
        });
        $("#bybranch").on('change', function () {
            var branchid = $(this).val();
            // Get Employee
            $.ajax({
                url: "/DevReport/GetEmployee",
                type: "Get",
                dataType: "Json",
                data: { BranchID: branchid },
                success: function (respones) {
                    var data = '';
                    $("#byuser option:not(:first-child)").remove();
                    $.each(respones, function (i, item) {
                        data +=
                            '<option value="' + item.ID + '">' + item.Employee.Name + '</option>';
                    });
                    $("#byuser").append(data);
                }
            });
        });
        //Get Vendor
        $.ajax({
            url: "/DevReport/GetVendor",
            type: "Get",
            dataType: "Json",
            success: function (respones) {
                var data = '';
                $.each(respones, function (i, item) {
                    data +=
                        '<option value="' + item.ID + '">' + item.Name + '</option>';
                });
                $("#byvendor").append(data);
                $("#vendorto").append(data);
            }
        });

        //Filter Status
        $.ajax({
            url: "/DevReport/FilterStatus",
            type: "Get",
            dataType: "JSON",
            success: function (response) {
                
            }
        });

        $('#filter').click(function () {

            filterData(this);
        });
        function filterData(button) {
            let btn_filter = $(button).children("i.fa-search");
            var date_from = $("#datefrom").val();
            var date_to = $("#dateto").val();
            var vendor_id = $("#byvendor").val();
            var vendorto_id = $("#vendorto").val();
            var status = $("#bystatus").val();

            $.ajax({
                url: "/DevReport/GetPurchasePaymentTransaction",
                type: 'GET',
                dataType: 'JSON',
                data: {
                    DateFrom: date_from,
                    DateTo: date_to,
                    VendorID: vendor_id,
                    VendortoID: vendorto_id,
                    Status: status

                },
                beforeSend: function () {
                    btn_filter.addClass("fa-spinner fa-spin");
                },
                success: function (reponse) {
                    bindGrid(reponse);
                    btn_filter.removeClass("fa-spinner fa-spin");
                }
            });
        }
        function bindGrid(reponse) {
            var dataGrid = $("#gridContainer").dxDataGrid({
                dataSource: reponse,
                allowColumnReordering: true,
                showBorders: true,
                allowColumnResizing: true,
                hoverStateEnabled: true,
                allowColumnResizing: true,
                columnResizingMode: "nextColumn",
                columnMinWidth: 50,
                columnAutoWidth: true,
                scrolling: {
                    columnRenderingMode: "virtual"
                },
                grouping: {
                    autoExpandAll: false,
                },
                searchPanel: {
                    visible: true
                },
                filterRow: {
                    visible: false,
                    applyFilter: "auto"
                },
                //editing: {
                //    mode: "row",
                //    allowUpdating: true
                //},
                //onEditingStart: function (e) {
                //    alert('edit')
                //},
                //onRowInserted: function (e) {
                //    e.component.navigateToRow(e.key);
                //},

                paging: {
                    pageSize: 10
                },
                pager: {
                    showPageSizeSelector: true,
                    allowedPageSizes: [5, 10, 20, 50, 100],
                    showInfo: true
                },
                loadPanel: {
                    enabled: true
                },
                groupPanel: {
                    visible: false
                },
                columns: [
                    {
                        dataField: "MasDocumentNo",
                        caption: "DocumentNo",
                        groupIndex: 0
                    },
                    {
                        dataField: "DocType",
                        caption: "DocumentNo",
                        alignment: "left",
                        width: 200

                    },
                    {
                        dataField: "DetailDate",
                        caption: "Date",
                        width: 200
                    },
                    {
                        dataField: "DetailTotal",
                        caption: "Total",
                        alignment: "left",
                        width: 320
                    },
                    {
                        dataField: "DetailBalanceDue",
                        caption: "Balance Due",
                        alignment: "left",
                        width: 280
                    },
                    {
                        dataField: "DetailCash",
                        caption: "Applied",
                        alignment: "left"
                    }
                ],
                summary: {
                    groupItems: [
                        {
                            showInColumn: "DetailTotal",
                            column: "VendorName",
                            summaryType: "max",
                            displayFormat: "Vendor : {0}",
                            showInGroupFooter: false,
                            alignByColumn: true
                        },
                        {
                            showInColumn: "DetailBalanceDue",
                            column: "MasDate",
                            summaryType: "max",
                            displayFormat: "Date Doc: {0}",
                            showInGroupFooter: false,
                            alignByColumn: true
                        },
                        {
                            showInColumn: "DetailTotal",
                            column: "MasTotal",
                            summaryType: "max",
                            displayFormat: "Total Invoice: {0}",
                            showInGroupFooter: true,
                            alignByColumn: true
                        },
                        {
                            showInColumn: "DetailBalanceDue",
                            column: "MasBalanceDue",
                            summaryType: "max",
                            displayFormat: "Balance Due Invoice: {0}",
                            showInGroupFooter: true,
                            alignByColumn: true
                        },
                        {
                            showInColumn: "DetailCash",
                            column: "MasStatus",
                            summaryType: "max",
                            displayFormat: "Status: {0}",
                            showInGroupFooter: false,
                            alignByColumn: true
                        },
                        {
                            showInColumn: "DetailCash",
                            column: "MasApplied",
                            summaryType: "max",
                            displayFormat: "Applied Invoice: {0}",
                            showInGroupFooter: true,
                            alignByColumn: true
                        }
                    ],
                    totalItems: [
                        {
                            showInColumn: "DetailBalanceDue",
                            column: "SumTotal",
                            summaryType: "max",
                            displayFormat: "Total :",
                            alignment: "right"
                        },
                        {
                            showInColumn: "DetailBalanceDue",
                            column: "SumBalanceDue",
                            summaryType: "max",
                            displayFormat: "Balance Due :",
                            alignment: "right"
                        },
                        {
                            showInColumn: "DetailBalanceDue",
                            column: "SumAppliedSSC",
                            summaryType: "max",
                            displayFormat: "Applied SSC :",
                            alignment: "right"
                        },
                        {
                            showInColumn: "DetailBalanceDue",
                            column: "SumApplied",
                            summaryType: "max",
                            displayFormat: "Applied LCC :",
                            alignment: "right"
                        },
                        //Value
                        {
                            showInColumn: "DetailCash",
                            column: "SumTotal",
                            summaryType: "max",
                            displayFormat: "{0}",
                            alignment: "right"
                        },
                        {
                            showInColumn: "DetailCash",
                            column: "SumBalanceDue",
                            summaryType: "max",
                            displayFormat: "{0}",
                            alignment: "right"
                        },
                        {
                            showInColumn: "DetailCash",
                            column: "SumAppliedSSC",
                            summaryType: "max",
                            displayFormat: "{0}",
                            alignment: "right"
                        },
                         {
                            showInColumn: "DetailCash",
                            column: "SumApplied",
                            summaryType: "max",
                            displayFormat: "{0}",
                            alignment: "right"
                        }
                    ]

                },

                export: {
                    enabled: true
                },
                onExporting: function (e) {
                    var workbook = new ExcelJS.Workbook();
                    var worksheet = workbook.addWorksheet('Payment-Tranction');

                    DevExpress.excelExporter.exportDataGrid({
                        component: e.component,
                        worksheet: worksheet,
                        topLeftCell: { row: 4, column: 1 }
                    }).then(function (dataGridRange) {
                        // header
                        var headerRow = worksheet.getRow(2);
                        headerRow.height = 30;
                        worksheet.mergeCells(2, 1, 2, 5);
                        headerRow.getCell(1).value = 'Payment Tranction';
                        headerRow.getCell(1).font = { name: 'Segoe UI Light', size: 22 };
                        headerRow.getCell(1).alignment = { horizontal: 'center' };

                    }).then(function () {
                        // https://github.com/exceljs/exceljs#writing-xlsx
                        workbook.xlsx.writeBuffer().then(function (buffer) {
                            saveAs(new Blob([buffer], { type: 'application/octet-stream' }), 'Payment-Transaction-Report.xlsx');
                        });
                    });
                    e.cancel = true;
                },
                onToolbarPreparing: function (e) {
                    var dataGrid = e.component;
                    e.toolbarOptions.items.unshift({
                        location: "before",
                        template: function () {
                            return
                        }
                    },
                        {
                            location: "after",
                            widget: "dxButton",
                            options: {
                                icon: "refresh",
                                onClick: function () {
                                    dataGrid.refresh();
                                    filterData();
                                }
                            }
                        },

                    );
                }

            }).dxDataGrid("instance");

            $("#autoExpand").dxCheckBox({
                value: false,
                text: "Expand All Groups",
                onValueChanged: function (data) {
                    dataGrid.option("grouping.autoExpandAll", data.value);
                }
            });
        }

    })
</script>

