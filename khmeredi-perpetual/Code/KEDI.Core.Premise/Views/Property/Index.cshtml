<style>
    ul.ck-pagination {
        margin-top: -18% !important;
    }

    .hover {
        cursor: pointer;
    }
</style>
<div class="card card-body">
    <div class="row">
        <div class="col-md-2">
            <a asp-action="Create" class="btn btn-xs btn-kernel">@Localizer["Create"]</a>
        </div>
        <div class="col-md-6">
        </div>
        <div class="col-md-4">
            <div class="group-search-boxes">
                <div id="text-search" class="wrap-search-box">
                    <div class="wrap-input show">
                        <i id="i-search" class="i-search fas fa-search"></i>
                        <input class="ignore" id="txtSearch" autocomplete="off" type="text" placeholder="@Localizer["Search ..."]">
                        <i id="i-close" class="i-close far fa-times-circle"></i>
                    </div>
                    <div id="btn-search" class="btn-search" style="display: none;"><i class="fas fa-search"></i></div>
                </div>
            </div>
        </div>
    </div>
    <div class="wrap-table myt1" style="height: 65vh">
        <table id="property">
            <thead>
                <tr>
                    <th>@Localizer["No"]</th>
                    <th>@Localizer["Name"]</th>
                    <th class="text-center">@Localizer["Active"]</th>
                    <th class="text-center">@Localizer["Actions"]</th>
                </tr>
            </thead>
        </table>
    </div>
    @* dialog Create Child Property Detail *@
    <div id="c-property-d-content" style="display:none; height: 400px;">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-5">
                <form>
                    <div class="form-group">
                        <label>@Localizer["Name"]</label>
                        <input type="text" class="input-box-kernel" id="nameCPD" />
                        <input type="text" hidden class="input-box-kernel" id="CPDID" />
                        <input type="text" hidden class="input-box-kernel" id="CPID" />
                        <span id="errorCPD"></span>
                    </div>
                </form>
                <div class="successCPD"></div>
            </div>
        </div>
    </div>

    @* dialog View Child Property Detail *@
    <div id="c-property-content" style="display:none; height: 400px; overflow-x: no-display; overflow: auto;">
        <div class="row">
            <div class="col-md-6"></div>
            <div class="col-md-6">
                <div class="group-search-boxes float-right mb-2">
                    <div id="text-search" class="wrap-search-box">
                        <div class="wrap-input show">
                            <i id="i-search" class="i-search fas fa-search"></i>
                            <input class="ignore" id="txtSearchchildProp" autocomplete="off" type="text" placeholder="Search ...">
                            <i id="i-close" class="i-close far fa-times-circle"></i>
                        </div>
                        <div id="btn-search" class="btn-search" style="display: none;"><i class="fas fa-search"></i></div>
                    </div>
                </div>
            </div>
        </div>
        <table id="list-child-properties" class="table-responsive-sm">
            <thead>
                <tr>
                    <th>@Localizer["No"]</th>
                    <th>@Localizer["Name"]</th>
                    <th>@Localizer["Action"]</th>
                </tr>
            </thead>
        </table>
        <div class="err-success-summery"></div>
    </div>
</div>
<script src="~/Admin/Property/js/index.js"></script>
