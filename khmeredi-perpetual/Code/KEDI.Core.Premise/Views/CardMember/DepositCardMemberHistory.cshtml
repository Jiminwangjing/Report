<style>
    .mt5 {
        margin-top: 2rem !important;
    }
</style>
<div class="card card-body">
    <div class="row">
        <div class="col-md-3">
            <div class="form-group">
                <label>@Localizer["Choose Customer"]</label>
                <select asp-items="@ViewBag.Customers" id="cus-id">
                    <option value="0">@Localizer["---Select---"]</option>
                </select>
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label>@Localizer["Date From"]</label>
                <input type="date" id="dateFrom" class="form-control" />
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label>@Localizer["Date To"]</label>
                <input type="date" id="dateTo" class="form-control" />
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group mt5">
                <button class="btn btn-kernel btn-xs" type="button" id="filter">@Localizer["Filter"]</button>
            </div>
        </div>
    </div>
    <div class="mt-3">
        <table id="historical">
            <tr>
                <th>@Localizer["#"]</th>
                <th>@Localizer["Doc Code"]</th>
                <th>@Localizer["Doc Number"]</th>
                <th>@Localizer["Posting Date"]</th>
                <th>@Localizer["Customer Name"]</th>
                <th>@Localizer["Price List Name"]</th>
                <th>@Localizer["Card Name"]</th>
                <th>@Localizer["Amount"]</th>
            </tr>
        </table>
    </div>
    <div class="mt-4">
        <a class="btn btn-kernel btn-xs" asp-action="DepositCardMember" asp-controller="CardMember">@Localizer["Back"]</a>
    </div>
</div>
<script src="~/Admin/CardMember/deposithistory.js"></script>