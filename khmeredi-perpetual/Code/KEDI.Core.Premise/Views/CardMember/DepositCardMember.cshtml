<style>
    .hover {
        cursor: pointer !important;
    }
</style>
<div id="data-invoice" hidden>@Json.Serialize(Model)</div>
<div class="card card-body">
    <div class="row">
        <div class="col-md-3">
            <a class="btn btn-kernel btn-xs" asp-action="DepositCardMemberHistory" asp-controller="CardMember">@Localizer["History"]</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-4">
                    <label>@Localizer["No"]</label>
                </div>
                <div class="col-md-8">
                    @*<input readonly type="text" id="customer" class="form-control hover" />*@
                    <select id="no" class="form-control hover"></select>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-4">
                    <label>@Localizer["Posting Date"]</label>
                </div>
                <div class="col-md-8">
                    <input type="date" id="postingdate" class="form-control" />
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-4">
                    <label>@Localizer["Number"]</label>
                </div>
                <div class="col-md-8">
                    <input readonly type="text" id="number" class="form-control hover" />
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-4">
                    <label>@Localizer["Card Name"]</label>
                </div>
                <div class="col-md-8">
                    <input readonly type="text" id="card" class="form-control" />
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-4">
                    <label>@Localizer["Choose Customer"]</label>
                </div>
                <div class="col-md-8">
                    <div class="hover choose-customer">
                        <input readonly type="text" id="customer-input" class="form-control hover" />
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-4">
                    <label>@Localizer["Price List"]</label>
                </div>
                <div class="col-md-8">
                    <input readonly type="text" id="pricelist" class="form-control" />
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-4">
                    <label>@Localizer["Amount"]</label>
                </div>
                <div class="col-md-8">
                    <input type="text" id="amount" autocomplete="off" class="form-control" />
                </div>
            </div>
        </div>
    </div>
    <br />
    <div class="error"></div>
    <div class="flex">
        <button class="btn btn-kernel btn-xs" type="button" id="save">@Localizer["Save"]</button>
        <a class="btn btn-kernel btn-xs" asp-action="DepositCardMember" asp-controller="CardMember">@Localizer["Cancel"]</a>
    </div>
</div>
<div class="customer-dlg" style="display: none">
    <div class="group-search-boxes">
        <div id="text-search" class="wrap-search-box">
            <div class="wrap-input show">
                <i id="i-search" class="i-search fas fa-search"></i>
                <input class="ignore" id="search-customer" autocomplete="off" type="text" placeholder="@Localizer["Search ..."]">
                <i id="i-close" class="i-close far fa-times-circle"></i>
            </div>
            <div id="btn-search" class="btn-search" style="display: none;"><i class="fas fa-search"></i></div>
        </div>
    </div>
    <div class="wrap-table detail mt-2 widget-scrollbar bTable">
        <table id="customer">
            <tr>
                <th>@Localizer["#"]</th>
                <th>@Localizer["Code"]</th>
                <th>@Localizer["Name"]</th>
                <th>@Localizer["Phone"]</th>
                <th>@Localizer["Address"]</th>
                <th>@Localizer["Action"]</th>
            </tr>
        </table>
    </div>
</div>
<script src="~/Admin/CardMember/deposit.js"></script>