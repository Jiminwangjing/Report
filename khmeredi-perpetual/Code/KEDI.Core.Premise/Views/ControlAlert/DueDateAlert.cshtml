<style>
    .cursor {
        cursor: pointer;
    }
</style>

<div class="card card-body">
    <div class="row">
        <div class="col-md-5">
            <div class="row">
                <div class="col-md-5">
                    <label>@Localizer["Customer"]</label>
                </div>
                <div class="col-md-7 cursor" id="show-list-cus">
                    <input type="text" readonly id="cus-id" class="form-control" />
                    <p><b></b></p>
                </div>
                <div class="col-md-5">
                    <label>@Localizer["Warehouse"]</label>
                </div>
                <div class="col-md-7">
                    <select id="ware-id" class="form-control">
                        <option value="0"></option>
                    </select>
                </div>
                <div class="col-md-5">
                    <label>@Localizer["Customer Ref."]</label>
                </div>
                <div class="col-md-7">
                    <input type="text" id="ref-id" class="form-control" />
                </div>
                <div class="col-md-5">
                    <label>@Localizer["Price List"]</label>
                </div>
                <div class="col-md-7">
                    <select id="cur-id" class="form-control">
                        <option></option>
                    </select>
                </div>
                <div class="col-md-5">
                    <label>@Localizer["User"]</label>
                </div>
                <div class="col-md-7">
                    <input type="text" id="user-id" class="form-control" readonly
                           value="@User.FindFirst("FullName").Value" />
                </div>
            </div>
        </div>
        <div class="col-md-2"></div>
        <div class="col-md-5">
            <div class="row">
                <div class="col-md-5">
                    <label>@Localizer["Invoice No."]</label>
                </div>
                <div class="col-md-7">
                    <select id="invoice-no" class="form-control"></select>
                </div>
                <div class="col-md-5">
                    <label>@Localizer["Number"]</label>
                </div>
                <div class="col-md-7">
                    <input type="text" readonly id="next_number" class="form-control" />
                </div>
                <div class="col-md-5">
                    <label>@Localizer["Status"]</label>
                </div>
                <div class="col-md-7">
                    <input type="text" readonly id="sta-id" value="open" class="form-control" />
                </div>

                <div class="col-md-5">
                    <label>@Localizer["Posting Date"]</label>
                </div>
                <div class="col-md-7" style="position:relative;">
                    <input data-date="" data-date-format="DD.MM.YYYY" type="date" id="post-date" class="form-control" />
                </div>
                <div class="col-md-5">
                    <label>@Localizer["Due Date"]</label>
                </div>
                <div class="col-md-7" style="position:relative;">
                    <input data-date="" data-date-format="DD.MM.YYYY" class="form-control" type="date" id="due-date" />
                </div>
                <div class="col-md-5">
                    <label>@Localizer["Document Date"]</label>
                </div>
                <div class="col-md-7">
                    <input data-date="" data-date-format="DD.MM.YYYY" class="form-control" type="date"
                           id="document-date" />
                </div>
            </div>
        </div>
    </div>
    <div class="wrap-table detail mt-2">
        <table id="list-detail">
            <tr>
                @*<th>@Localizer["No."]</th>*@
                <th>@Localizer["Item Code"]</th>
                <th>@Localizer["Description"]</th>
                <th>@Localizer["Quantity"]</th>
                <th class="text-center">@Localizer["UoM"]</th>
                <th>@Localizer["Unit Price"]</th>
                <th>@Localizer["Discount"]</th>
                <th>@Localizer["Discount Type"]</th>
                @*<th>@Localizer["VAT"]</th>*@
                <th>@Localizer["Total"]</th>
                <th>@Localizer["Remarks"]</th>
                <th>@Localizer["Action"]</th>
            </tr>
        </table>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-5">
            <div class="row">
                <div class="col-md-5">
                    <label>@Localizer["Exchange Rate"]</label>
                </div>
                <div class="col-md-7">
                    <input type="text" readonly id="ex-id" class="form-control" />
                </div>

                <div class="col-md-5">
                    <label>@Localizer["Remarks"]</label>
                </div>
                <div class="col-md-7">
                    <textarea id="remark-id" style="height:50px;" class="form-control"></textarea>
                </div>

                <div class="col-md-5">
                    <label>@Localizer["Source copy"]</label>
                </div>
                <div class="col-md-7">
                    <textarea id="source-copy" style="height: 100px;" class="form-control form-control" readonly></textarea>
                </div>
            </div>
        </div>
        <div class="col-md-2"></div>
        <div class="col-md-5">
            <div class="row">
                <div class="col-md-5">
                    <label>@Localizer["Sub Total"]</label>
                </div>
                <div class="input-group col-md-7">
                    <div class="input-group-prepend">
                        <span class="input-group-kernel cur-class">USD</span>
                    </div>
                    <input type="text" readonly id="sub-id" class="form-control" value="0" />
                </div>

                <div class="col-md-5">
                    <label>@Localizer["Discount"]</label>
                </div>
                <div class="input-group col-md-7">
                    <div class="input-group-prepend">
                        <select id="sub-dis-id" class="form-control">
                            <option value="Percent"> % </option>
                        </select>
                    </div>
                    <input type="text" id="dis-id" class="form-control summary" data-number value="0" />
                </div>

                <div class="col-md-5">
                    <label>@Localizer["Applied Amount"]</label>
                </div>
                <div class="col-md-7 input-group">
                    <div class="input-group-append"><span class="cur-class input-group-kernel"></span></div>
                    <input type="text" id="applied-amount" value="0" readonly data-number class="summary form-control" />
                </div>

                <div class="col-md-5">
                    <label>@Localizer["Total Amount"]</label>
                </div>
                <div class="col-md-7 input-group">
                    <div class="input-group-prepend">
                        <span class="cur-class input-group-kernel"></span>
                    </div>
                    <input type="text" id="total-id" class="form-control" readonly value="0" />
                </div>
            </div>
        </div>
    </div>
</div>