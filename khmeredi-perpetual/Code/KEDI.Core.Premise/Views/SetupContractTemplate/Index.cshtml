    <div class="group-search-boxes mb-1" style="display:flex;justify-content:flex-end ">
        <div id="text-search" class="wrap-search-box ">
            <div class="wrap-input show">
                <i id="i-search" class="i-search fas fa-search"></i>
                <input class="ignore" id="search-levelinterest" autocomplete="off" type="text" placeholder="@Localizer["Search ..."]">
                <i id="i-close" class="i-close far fa-times-circle"></i>
            </div>
            <div id="btn-search" class="btn-search" style="display: none;"><i class="fas fa-search"></i></div>
        </div>
    </div>
    <div>
        <table id="setup-contractype">
            <thead>
                <tr>
                    <th><i id="create-level-description" class="fas fa-plus-square" style="color:sandybrown;"></i></th>
                    <th style="width:70px">Contract Type</th>
                </tr>
            </thead>

        </table>
    </div>
    <div style="display:flex;justify-content:flex-end"><p id="sms_level"></p></div>

</div>
@*//=========Model box of list service contract====*@
<div class="listservicecontract_containers" style="display: none;">

    <div class="group-search-boxes" style="display:flex;justify-content:flex-end">
        <div id="text-search" class="wrap-search-box ">
            <div class="wrap-input show">
                <i id="i-search" class="i-search fas fa-search"></i>
                <input class="ignore" id="search-bus" autocomplete="off" type="text" placeholder="@Localizer["Search ..."]">
                <i id="i-close" class="i-close far fa-times-circle"></i>
            </div>
            <div id="btn-search" class="btn-search" style="display: none;"><i class="fas fa-search"></i></div>
        </div>
    </div>

    <table id="list-contract" class="mt-3">
        <tr>
            <th>@Localizer["Name"]</th>
            <th>@Localizer["Description"]</th>
            <th>@Localizer["Contract Type"]</th>

            <th>@Localizer["Action"]</th>
        </tr>
    </table>
</div>
<div hidden id="model-data">@Json.Serialize(Model)</div>
<input id="id" hidden>
<input id="remarkid" hidden>
<input id="converid" hidden>
<script src="~/js/Sale/Service-contract-type.js"></script>






