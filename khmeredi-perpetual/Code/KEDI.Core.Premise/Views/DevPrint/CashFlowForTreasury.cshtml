<link href="~/Admin/FinancialReports/cash-flow-for-treasury.css" rel="stylesheet" />

<div class="card card-body">
    <div class="row">
        <div class="col-md-3">
            <div class="form-group">
                <label class="font-size">@Localizer["Date"]</label>
                <select class="input-box-kernel font-size" disabled id="date-select">
                    @* <option value="0">---@Localizer["Select"]---</option> *@
                    <option value="1">@Localizer["Posting Date"]</option>
                </select>
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label class="font-size">@Localizer["From"]</label>
                <div class="from-sh-posting-period cursor">
                    <input type="text" readonly id="from-date" class="input-box-kernel font-size">
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label class="font-size">@Localizer["To"]</label>
                <div class="to-sh-posting-period cursor" disabled>
                    <input type="text" readonly id="to-date" class="input-box-kernel font-size">
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label class="font-size">@Localizer[""]</label>
                <div class="mt4">
                    <button type="button" class="btn btn-kernel font-size" id="btn-ok" disabled>@Localizer["Ok"]</button>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="wrap-table">
    <table id="list_cash_flow_for_treasury"></table>
</div>

<div id="postingPeriod-content" style="display:none;">
    <div class="item group-search-boxes">
        <div id="text-search" class="wrap-search-box">
            <div class="wrap-input show">
                <i id="i-search" class="i-search fas fa-search"></i>
                <input class="ignore font-size" id="find-cus" autocomplete="off" type="text" placeholder="Search ...">
                <i id="i-close" class="i-close far fa-times-circle"></i>
            </div>
            <div id="btn-search" class="btn-search" style="display: none;"><i class="fas fa-search"></i></div>
        </div>
    </div>
    <div id="container-list-posting-period" class="wrap-table myt1" style="height: 60vh">
        <table class="posting-period">
            <thead>
                <tr>
                    <th class="text-center font-size">@Localizer["#"]</th>
                    <th class="text-center font-size">@Localizer["Period Code"]</th>
                    <th class="text-center font-size">@Localizer["Period Name"]</th>
                    <th class="text-center font-size">@Localizer["Choose"]</th>
                </tr>
            </thead>
        </table>
    </div>
</div>
<script src="~/Admin/FinancialReports/cash-flow-for-treasury.js"></script>