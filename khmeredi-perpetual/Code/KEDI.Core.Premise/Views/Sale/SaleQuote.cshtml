<style>
    .cursor {
        cursor: pointer;
    }

    .font-size {
        font-size: 13px;
    }

    .loading {
        width: 100vw;
        height: 90%;
        z-index: 9999999999999999999999999;
        position: absolute;
    }

    .img-loading {
        position: absolute;
        top: 46%;
        left: 38%;
    }

    .loadingitem {
        position: absolute;
        top: 46%;
        left: 46%;
    }

    .bTable {
        overflow: auto;
        height: 177px;
    }

    table thead tr th,
    table tr th,
    table tbody tr,
    table tr td {
        text-align: left;
    }

    .input-group .input-group-text,
    .input-group select,
    .input-group input {
        min-width: 38px !important;
