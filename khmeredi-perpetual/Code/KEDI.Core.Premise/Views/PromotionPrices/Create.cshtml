@model PromotionPrice

@{
    ViewData["Title"] = "Create";
}
<style>
    .fa {
        margin-right: 4px;
    }

    
    .StyleImge {
        height: 150px;
        border-radius: 50%;
        -moz-border-radius: 50%;
        -webkit-border-radius: 50%;
        width: 150px;
    }
    .form-group{
        padding:0px;
        margin:0px;
    }
    .pull-left{
        margin-top:10px;
    }
</style>
<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name" class="control-label">@Localizer["Name"] :</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
        <span class="text-danger">@ViewData["error.Name"]</span>
    </div>
    <div class="form-group">
        <label asp-for="Amount" class="control-label">@Localizer["Amount"] :</label>
        <input asp-for="Amount" class="form-control" />
        <span asp-validation-for="Amount" class="text-danger"></span>
        <span class="text-danger">@ViewData["error.Amount"]</span>
    </div>
    <div class="form-group">
        <label asp-for="CurrencyID" class="control-label">@Localizer["Currency"] :</label>
        <select asp-for="CurrencyID" class="form-control" asp-items="ViewBag.CurrencyID">
            <option value="0" selected disabled>--- Select---</option>
        </select>
        <span class="text-danger">@ViewData["error.Currency"]</span>
    </div>
    <div class="form-group">
        <label asp-for="Discount" class="control-label">@Localizer["Discount"] :</label>
        <input asp-for="Discount" class="form-control" />
        <span asp-validation-for="Discount" class="text-danger"></span>
        <span class="text-danger">@ViewData["error.Discount"]</span>
    </div>
    <div class="form-group">
        <label asp-for="TypeDis" class="control-label">@Localizer["Type_Discount"] :</label>
        <select asp-for="TypeDis" class="col-sm-12 form-control">
            <option value="0" selected disabled>--- Select---</option>
            <option value="Persent">Persent</option>
            <option value="Cash">Cash</option>
        </select>
        <span class="text-danger"></span>
        <span class="text-danger">@ViewData["error.TypeDis"]</span>
    </div>
    <div class="row pull-left">
        <div class="col-md-12 ">
            <button class="btn btn-success btn-xs" type="submit"><i class="fa fa-plus-circle"></i>@Localizer["Add"]</button>
            <a class="btn btn-xs btn-danger" asp-action="Index"><i class="fa fa-reply"></i> @Localizer["Back"]</a>
        </div>
    </div>
</form>

