@model IEnumerable<CKBS.Models.PrintList.PrintPricelist>
@{
    ViewData["Title"] = "PrintPriceLists";
    Layout = "_Layout_print";
    var num = 0;
}
<style>
    body {
        font-family: 'Khmer OS Battambang';
        font-size: 14px;
    }

    .tbfontsize {
        font-size: 16px;
    }
</style>

<hr style="border: 2px solid #2874A6;margin-bottom:0px">
<div class="row">
    <div class="col-xs-3" style="margin-left: -26px;">
        <img src="~/Images/company/@Model.FirstOrDefault().Logo" width="315" height="140" />
    </div>
    <div class="col-xs-9" style="margin-top:35px;">
        <h1 style="color: blue; font-weight: bold; padding-left: 18.60rem">PRODUCTS PRICE LIST</h1>
    </div>
</div>

<div class="col-xs-5" style="margin-bottom:10px">
    <table class="tbfontsize" style="padding-top:20px">
        <tr>
            <td style="padding-top:10px;line-height:35px">@Model.FirstOrDefault().Addresskh</td>
        </tr>
        <tr>
            <td style="padding-top:10px;line-height:25px">@Model.FirstOrDefault().AddressEng</td>
        </tr>
    </table>
</div>

<div class="col-xs-7" style="margin-top:15px">
    <table class="tbfontsize">
        <tr>
            <td>កាលបរិច្ឆេទចេញតម្លៃ / Released Date :</td>
            <td style="padding: 0 0 0 5px">@DateTime.Now.ToString("dd-MM-yyyy")</td>
        </tr>
    </table>
</div>

<div class="col-xs-7">
    <table class="tbfontsize">
        <tr>
            <td style="padding-top:20px">សុពលភាពដល់ / Valid till :</td>
            <th style="padding:20px 0px 0 5px"></th>
        </tr>
    </table>
</div>
<div>
    <table class="table table-bordered">
        <thead>
            <tr style="background:#2874A6;color:white; text-align:center!important;">
                <th class="text-center">No.</th>
                <th class="text-center" width="50%">Description</th>
                <th class="text-center" width="15%">Brand</th>
                <th class="text-center" width="15%">Code</th>
                <th class="text-center" width="20%">Unit Price</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                num++;


                <tr style="border: 1px dashed #c2c2c2">
                    <td style="text-align:center">@num</td>
                    <td>@item.ItemName</td>
                    <td style="text-align:center">@item.Brand</td>
                    <td style="text-align:center">@item.Code</td>
                    <td style="text-align:center">@item.Price</td>

                </tr>
            }
        </tbody>
    </table>
</div>


<div class="row">
    <div class="col-xs-4">
        <table class="tbfontsize">
            <tr>
                <td>រៀបចំដោយ / Issued by:</td>
            </tr>
        </table>
    </div>
    <div class="col-xs-4">
        <table class="tbfontsize">
            <tr>
                <td>ពិនិត្យដោយ / Checked by:</td>
            </tr>
        </table>
    </div>s
    <div class="col-xs-4">
        <table class="tbfontsize">
            <tr>
                <td>ទទួលស្គាល់ដោយ / Recognized by:</td>
            </tr>
        </table>
    </div>
</div>

<div class="row" style="margin-top: 70px">
    <div class="col-xs-4">
        <table class="tbfontsize">
            <tr>
                <td>ឈ្មោះ / Name:</td>
            </tr>
        </table>
    </div>
    <div class="col-xs-4">
        <table class="tbfontsize">
            <tr>
                <td>ឈ្មោះ / Name:</td>
            </tr>
        </table>
    </div>
    <div class="col-xs-4">
        <table class="tbfontsize">
            <tr>
                <td>ឈ្មោះ / Name:</td>
            </tr>
        </table>
    </div>
</div>
