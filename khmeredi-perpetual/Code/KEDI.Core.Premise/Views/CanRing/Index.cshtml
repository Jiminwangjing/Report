@using KEDI.Core.Premise.Models.Services.Administrator.CanRingSetup;
<style>
    .form-group {
        margin: -10px 0 0 0 !important;
    }

        .form-group .form-control {
            height: 24px !important;
        }
</style>
<div class="card card-body">

    <div class="row">
        <div class="col-md-7">
            @if (UserManager.Check("CR002"))
            {
            <a asp-action="CanRingSetup" class="btn btn-xs btn-kernel tbncrate"> @Localizer["Create"]</a>
            }
        </div>
        <div class="col-md-5">
            <div class="group-search-boxes">
                <div id="text-search" class="wrap-search-box">
                    <div class="wrap-input show">
                        <i id="i-search" class="i-search fas fa-search"></i>
                        <input class="ignore" id="search-can-ring-setup" autocomplete="off" type="text" placeholder="@Localizer["Search ..."]" />
                        <i id="i-close" class="i-close far fa-times-circle"></i>
                    </div>
                    <div id="btn-search" class="btn-search" style="display: none;"><i class="fas fa-search"></i></div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label>@Localizer["Active"]</label>
                <select class="form-control" id="active" asp-items="Html.GetEnumSelectList<ActiveCanRingType>()"></select>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label>@Localizer["Price List"]</label>
                <select class="form-control" id="plid" asp-items="@ViewBag.PriceList">
                    <option value="0">@Localizer["All"]</option>
                </select>
            </div>
        </div>
    </div>
    <br />
    <div class="wrap-table widget-scrollbar">
        <table id="list">
            <tr>
                <th>@Localizer["#"]</th>
                <th>@Localizer["Name"]</th>
                <th>@Localizer["Price List"]</th>
                <th>@Localizer["Item Name"]</th>
                <th>@Localizer["Qty"]</th>
                <th>@Localizer["Uom"]</th>
                <th>@Localizer["Item Change"]</th>
                <th>@Localizer["Qty Change"]</th>
                <th>@Localizer["Uom Change"]</th>
                <th>@Localizer["Charge"]</th>
                <th>@Localizer["Currency"]</th>
                <th>@Localizer["Active"]</th>
            </tr>
        </table>
    </div>
</div>
<script src="~/Admin/CanRing/index.js"></script>