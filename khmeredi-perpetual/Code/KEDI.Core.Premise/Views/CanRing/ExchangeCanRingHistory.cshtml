<style>
    .form-group {
        margin: -10px 0 0 0 !important;
    }

        .form-group .form-control {
            height: 24px !important;
        }

    .font-size {
        font-size: 13px;
    }

    .hover {
        cursor: pointer;
    }
</style>
<div class="card card-body">
    <div class="row">
        <div class="col-md-3 col-sm-5">
            <div class="form-group">
                <label class="font-size">@Localizer["Date From"]</label>
                <input class="form-control font-size" type="date" id="date-from" />
            </div>
        </div>
        <div class="col-md-3 col-sm-5">
            <div class="form-group">
                <label class="font-size">@Localizer["Date To"]</label>
                <input class="form-control font-size" type="date" id="date-to" />
            </div>
        </div>
        <div class="col-md-3 col-sm-5">
            <div class="form-group">
                <label class="font-size">@Localizer["Branch"]</label>
                <select class="form-control font-size" id="branch-id" asp-items="@ViewBag.Branches">
                    <option value=0></option>
                </select>
            </div>
        </div>
        <div class="col-md-3 col-sm-5">
            <div class="form-group">
                <label class="font-size">@Localizer["User"]</label>
                <select class="form-control font-size" id="user">
                    <option value=0></option>
                </select>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3 col-sm-5">
            <div class="form-group">
                <label class="font-size">@Localizer["Vendor"]</label>
                <div class="hover" id="choose-vendor">
                    <input class="form-control font-size" type="text" readonly id="vendor-name" />
                </div>
                <input class="form-control font-size" hidden type="text" id="vendor-id" />
            </div>
        </div>
        <div class="col-md-3 col-sm-5">
            <div class="form-group">
                <label class="font-size">@Localizer["Warehouse"]</label>
                <select class="form-control font-size" id="warehouse-id">
                    <option value=0></option>
                </select>
            </div>
        </div>
        <div class="col-md-3 col-sm-5">
            <div class="form-group">
                <label class="font-size">@Localizer["Price List"]</label>
                <select class="form-control font-size" id="plid" asp-items="@ViewBag.PriceList">
                    <option value=0></option>
                </select>
            </div>
        </div>
        <div class="col-md-3 col-sm-5">
            <div class="form-group">
                <label class="font-size">@Localizer["Payment Means"]</label>
                <select class="form-control font-size" id="pmid" asp-items="@ViewBag.PaymentMeans">
                    <option value=0></option>
                </select>
            </div>
        </div>
    </div>
    <div class="row mt-2 mb-2">
        <div class="col-md-6 col-sm-8">
            <div class="form-group">
                <input type="text" id="search-history" placeholder="@Localizer["search something here ..."]" class="form-control font-size" />
            </div>
        </div>
        <div class="col-md-3 col-sm-4">
            <button class="btn btn-kernel btn-xs" id="filtering">@Localizer["Filter"]</button>
        </div>
    </div>
    <div class="widget-scrollbar">
        <table id="history-list">
            <tr>
                <th>@Localizer["№"]</th>
                <th>@Localizer["Doc. Code"]</th>
                <th>@Localizer["Invoice"]</th>
                <th>@Localizer["Posting Date"]</th>
                <th>@Localizer["Vendor"]</th>
                <th>@Localizer["User"]</th>
                <th>@Localizer["Warehouse"]</th>
                <th>@Localizer["Price List"]</th>
                <th>@Localizer["Payment Means"]</th>
                <th>@Localizer["Total"]</th>
                <th>@Localizer["Action"]</th>
            </tr>
        </table>
    </div>
    <div class="row mt-4">
        <div class="col-md-5">
            <a href="/CanRing/ExchangeCanRing" class="btn btn-xs btn-kernel">@Localizer["Back"]</a>
        </div>
    </div>
    @* Choose Vendor Modal *@
    <div class="vendor-container-list" style="display: none">
        <div class="row">
            <div class="col-md-7"></div>
            <div class="col-md-5">
                <div class="group-search-boxes">
                    <div id="text-search" class="wrap-search-box">
                        <div class="wrap-input show">
                            <i id="i-search" class="i-search fas fa-search"></i>
                            <input class="ignore" id="find-vendor" autocomplete="off" type="text"
                                   placeholder="@Localizer["Search ..."]">
                            <i id="i-close" class="i-close far fa-times-circle"></i>
                        </div>
                        <div id="btn-search" class="btn-search" style="display: none;">
                            <i class="fas fa-search"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div>
            <table id="list-vendor">
                <tr>
                    <th>No</th>
                    <th>@Localizer["Code"]</th>
                    <th>@Localizer["Name"]</th>
                    <th>@Localizer["Type"]</th>
                    <th>@Localizer["Phone"]</th>
                    <th>@Localizer["Action"]</th>
                </tr>
            </table>
        </div>
    </div>
</div>
<script src="~/Admin/CanRing/exchange-can-ring-report.js"></script>