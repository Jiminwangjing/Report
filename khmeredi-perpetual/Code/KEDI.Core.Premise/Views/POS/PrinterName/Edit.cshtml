@model PrinterName

@{
    ViewData["Title"] = "Edit";
}
<style>
    .fa{
        margin-right:4px;
    }
</style>
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID"/>
            <div class="form-group">
                <label class="control-label">@Localizer["Name"] :</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-success btn-sm"><i class="fa fa-save"></i>@Localizer["Save"]</button>
                <a class="btn btn-danger btn-sm" asp-action="Index"><i class="fa fa-reply"></i>@Localizer["Back"]</a>
            </div>
        </form>
    </div>
</div>
