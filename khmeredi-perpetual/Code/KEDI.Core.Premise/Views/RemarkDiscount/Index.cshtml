<style>
    .hover{
        cursor: pointer;
    }
</style>
<div class="card card-body">
    <div class="row">
        <div class="col-md-5">
            <a class="btn btn-xs btn-kernel" asp-action="Create" asp-controller="RemarkDiscount">@Localizer["Create"]</a>
        </div>
        <div class="col-md-7">
            <div class="group-search-boxes">
                <div id="text-search" class="wrap-search-box">
                    <div class="wrap-input show">
                        <i id="i-search" class="i-search fas fa-search"></i>
                        <input class="ignore" id="txtSearch" autocomplete="off" type="text" placeholder="@Localizer["Search ..."]">
                        <i id="i-close" class="i-close far fa-times-circle"></i>
                    </div>
                    <div id="btn-search" class="btn-search" style="display: none;"><i class="fas fa-search"></i></div>
                </div>
            </div>
        </div>
    </div>
    <br />
    <div>
        <table id="remarkdiscount">
        <thead>
            <tr>
                <th>@Localizer["#"]</th>
                <th>@Localizer["Remark"]</th>
                <th>@Localizer["Active"]</th>
                <th>@Localizer["Action"]</th>
            </tr>
        </thead>
    </table>
    </div>
    <br />
    <div class="flex">
            <button class="btn btn-xs btn-kernel" type="button" id="save">@Localizer["Save"]</button>
        </div>
        <div class="message"></div>
</div>

<script src="~/Admin/RemarkDiscount/js/index.js"></script>