    //edit card
    $("#ListCard").on('click', '.Edit_card', function () {
        var id = $(this).attr('data-id_edit');
        var name = $(this).attr('data-name');
        var des = $(this).attr('data-description');
        var cartypeID = $(this).attr('data-CrarTypeID');
