            $("#txtApprove").prop('checked', false);
        } else {
            $("#txtApprove").prop('checked', true);
        }
        
        document.getElementById("txtDateExpire").value = date_Ex;
        document.getElementById("btnRef_No").value = Re_NO;
    });
